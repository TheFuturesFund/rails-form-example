<%= form_for(form) do |f| %>
  <% if form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email_address %>
    <%= f.email_field :email_address %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </div>

  <div class="field">
    <%= f.label :gender %>

    <%= f.label :gender, "Male", value:  "male" %>
    <%= f.radio_button :gender, "male" %>
    <%= f.label :gender, "Female", value:  "female" %>
    <%= f.radio_button :gender, "female" %>
    <%= f.label :gender, "Other", value:  "other" %>
    <%= f.radio_button :gender, "other" %>
  </div>

  <div class="field">
    <%= f.label :grade %>
    <%= f.select :grade, Form.grades.keys.to_a %>
  </div>

  <div class="field">
    <%= f.label :dietary_restrictions %>
    <%= f.check_box :dietary_restrictions %>
  </div>

  <div class="field">
    <%= f.label :dietary_restrictions_description, "Please describe any dietary restrictions that may be present" %>
    <%= f.text_area :dietary_restrictions_description %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_name %>
    <%= f.text_field :emergency_contact_name %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_relationship %>
    <%= f.text_field :emergency_contact_relationship %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_phone %>
    <%= f.text_field :emergency_contact_phone %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_address %>
    <%= f.text_field :emergency_contact_address %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_city %>
    <%= f.text_field :emergency_contact_city %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_state %>
    <%= f.text_field :emergency_contact_state %>
  </div>

  <div class="field">
    <%= f.label :emergency_contact_zipcode %>
    <%= f.text_field :emergency_contact_zipcode %>
  </div>

  <div class="actions">
    <%= f.submit "Submit Application!" %>
  </div>
<% end %>
